<mvc:View
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        controllerName="sapville.sapui-study.mvc-app-simple.controller.Master"
>
    <Page title="{i18n>masterViewTitle}">
        <content>
            <Table
                    id="table"
                    items="{
                        path: '/',
                        sorter: {
                            path: 'id',
                            descending: true
                        }
                    }"
                    class="sapUiResponsiveMargin"
                    width="auto"
            >
                <headerToolbar>
                    <Toolbar>
                        <content>
                            <Title text="{i18n>masterSuppliersNumber}: {count>/CountSuppliers}"/>
                            <ToolbarSpacer/>
                            <Button
                                icon="sap-icon://add"
                                tooltip="{i18n>btnAddSupplier}"
                                press="onAddSupplier"
                            />
                        </content>
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <header>
                            <Toolbar>
                                <Text text="{i18n>tableIDColumnTitle}"/>
                                <Button
                                    icon="sap-icon://sort"
                                    press="onSortID"
                                />
                            </Toolbar>
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Toolbar>
                                <Text text="{i18n>tableNameColumnTitle}"/>
                                <Button
                                        icon="sap-icon://sort"
                                        press="onSortName"
                                />
                            </Toolbar>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                            type="Navigation"
                            press="onListPress"
                    >
                        <cells>
                            <ObjectIdentifier text="{ID}"/>
                            <ObjectIdentifier text="{Name}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>


</mvc:View>